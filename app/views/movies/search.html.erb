<center>
    <h1>Search Results</h1>
</center>
<div class="container">
    <div class="col-md-3">
        <p class="lead">Category Search</p>
        <div class="list-group">
            <!--a href="#" class="list-group-item">Category 1</a-->
            <%= button_to 'All Movies', movies_search_path, method: :get, class:"list-group-item btn-lg btn-block" %>
            <%= button_to 'Action', movies_search_path, name: "search",value: "action", method: :get, class:"list-group-item btn-lg btn-block" %>
            <%= button_to 'Romance', movies_search_path, name: "search",value: "romance", method: :get, class:"list-group-item btn-lg btn-block" %>
            <%= button_to 'Horror', movies_search_path, name: "search",value: "horror", method: :get, class:"list-group-item btn-lg btn-block" %>
            <%= button_to 'Animation', movies_search_path, name: "search",value: "animation", method: :get, class:"list-group-item btn-lg btn-block" %>
            <%= button_to 'Adventure', movies_search_path, name: "search",value: "adventure", method: :get, class:"list-group-item btn-lg btn-block" %>
            <%= button_to 'Fantacy', movies_search_path, name: "search",value: "fantacy", method: :get, class:"list-group-item btn-lg btn-block" %>
            <%= button_to 'Drama', movies_search_path, name: "search",value: "drama", method: :get, class:"list-group-item btn-lg btn-block" %>
        </div>
    </div>
    <div class="col-md-9 text-center admin">
        <div class="col-md-12 admin">
            <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                	<th>Thumbnail</th>
                    <th>Movie Title</th>
                    <th>Release Date</th>
                    <th>Genre</th>
                	<th>Description</th>
                	<th>Lead Actors</th>
                	<th>Supporting Actors</th>
                	<% if admin_signed_in? %>
                	    <th colspan=3>Perform Actions</th>
                	<% else %>
                	    <th>View Reviews</th>
                	<% end %>
                  </tr>
                 </thead>
                 <tbody>
                  <% @results.each do |movie| %>
                    <tr>
                      <td><%= image_tag movie.poster.url(:thumb) %></td>
                	  <td><%= movie.title %></td>
                      <td><%= movie.rdate %></td>
                	  <td><%= movie.genre %></td>
                	  <td><%= movie.description %></td>
                	  <td><%= movie.actor1 %></td>
                	  <td><%= movie.actor2 %></td>
                	  <td><%= link_to 'Show Details', movie_path(movie), html_options={class:"btn btn-info btn-xl"} %></td>
                	  <% if admin_signed_in? %>
                	      <td><%= link_to 'Edit Information', edit_movie_path(movie), html_options={class:"btn btn-warning btn-xl"} %></td>
                    	  <td><%= button_to 'Remove', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xl mbtn" %></td>
                      <% end %>
                    </tr>
                  <% end %>
              </tbody>
            </table>
        </div>
    </div>
</div>