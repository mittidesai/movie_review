<div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%= @movie.title %>
                    <small><%= @movie.rdate %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <!--%= image_tag("1.jpg", size: "500X500", alt: @movie.title, class:"img-responsive") %-->
                <%= image_tag @movie.poster.url(), alt: @movie.title, class:"img-responsive mPoster" %>
            </div>

            <div class="col-md-4">
                <h3>Movie Description</h3>
                <p><%= @movie.description %></p>
                <h3>Movie Details</h3>
                <ul>
                    <li>Directed by : <%= @movie.dname %></li>
                    <li>Lead Actors: <%= @movie.actor1 %>, <%= @movie.actor2 %></li>
                    <!--li>Consectetur</li>
                    <li>Adipiscing Elit</li-->
                </ul>
            </div>

        </div>
        <!-- /.row -->
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back to Movie List', movies_path %>
        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Reviews</h3>
            </div>
            
            <% if @movie.reviews.count==0 %>
                <h3>Be the 1st owl to review this movie.</h3>
            <% else %>
                <h4>Total Reviews =<%= @movie.reviews.count %></h4>
                <%= render @movie.reviews %>
            <% end %>
            <% if user_signed_in? %>
                <%= render 'reviews/form' %>
            <% end %>
