<center>
    <h1>Welcome Admin Owl</h1>
</center>

<div class="container">
    <div class="row text-center admin">
        <%= link_to 'Add A New Movie', new_movie_path, html_options={class:"btn btn-primary btn-xl"} %>
        <div class="col-md-12 admin">
            <% m = Movie.all %>
            <% if m.length == 0 %>
    	        <br><em>No movies found!</em>
    	    <% else %>
    	        <h3>Total Movies: <%= m.count %></h3>
                <table class="table table-striped table-bordered">
                  <tr>
                	<th>Thumbnail</th>
                    <th>Movie Title</th>
                    <th>Release Date</th>
                	<th>Description</th>
                	<th colspan=3>Perform Actions</th>
                  </tr>
                 
                  <% @movies.each do |movie| %>
                    <tr>
                      <td><%= image_tag movie.poster.url(:thumb) %></td>
                	  <!--td><!--%= image_tag("#{movie.id}.jpg", :alt => "No Image") %></td-->
                	  <td><%= movie.title %></td>
                      <td><%= movie.rdate %></td>
                	  <!--td><!--%= movie.imdb %></td-->
                	  <td><%= movie.description %></td>
                	  <td><%= link_to 'Show Details', movie_path(movie), html_options={class:"btn btn-info btn-xl"} %></td>
                      <td><%= link_to 'Edit Information', edit_movie_path(movie), html_options={class:"btn btn-warning btn-xl"} %></td>
                	  <td><%= button_to 'Remove', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xl mbtn" %></td>
                    </tr>
                  <% end %>
                </table>
            <% end %>
        </div>
    </div>
</div>